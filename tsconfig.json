{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "lib/types",
      "typeRoots": [
         "node_modules/@types",
         "src/typings"
      ],
      "types": [
         "koa-body"
      ]
   },
   "exclude": [
      "lib",
      "node_modules"
   ]
}